
    <div class="reg-form-container">
      <%= form_with model: @registers, local: true, class: "reg-form" do |f| %>
        <h1>Register Form</h1>
        <!-- Row First Name and Last Name -->
        <div class="form-row">
          <div class="form-group">
            <%= f.label :first_name %>
            <%= f.text_field :first_name, id: "firstName" %>
            <% @register.errors.full_messages_for(:first_name).each do |message|%>
            <%= message %>
            <% end %>
          </div>
          <div class="form-group">
            <%= f.label :last_name %>
            <%= f.text_field :last_name, id: "lastName" %>
          </div>
        </div>

        <!-- Row Birthday and Gender -->
        <div class="form-row">
          <div class="form-group">
            <%= f.label :birthday %>
            <%= f.date_field :birthday, id: "birthday" %>
          </div>
          <div class="form-group">
            <%= f.label :gender %>
            <div class="radio-group">
              <%= f.radio_button :gender, "male", id: "male" %>
              <div class="label-gender">Male</div>
              <%= f.radio_button :gender, "female", id: "female" %>
              <div class="label-gender">Female</div>
            </div>
          </div>
        </div>

        <!-- Row Email and PhoneNumber -->
        <div class="form-row">
          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, id: "email", required: true %>
          </div>
          <div class="form-group">
            <%= f.label :phone %>
            <%= f.telephone_field :phone, id: "phone", required: true %>
          </div>
        </div>

        <!-- Row Subject -->
        <div class="form-group">
          <%= f.label :subject %>
          <%= f.select :subject, [["Option 1", "option1"], ["Option 2", "option2"], ["Option 3", "option3"]], { prompt: "Choose option" } %>
        </div>

        <!-- Submit button -->
        <%= f.submit "Submit", class: "btn-submit" %>
      <% end %>
    </div>
    
  </body>
</html>
