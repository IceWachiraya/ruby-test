 <!-- Delete Confirmation Modal -->
<div id="deleteConfirmationModal" class="modal-delete" data-controller="delete">
    <div class="modal-content-delete">
        <p>Are you sure you want to delete this user?</p>
        <div class="modal-actions" >
            <button id="confirmDelete" class="btn btn-delete" data-action="click->delete#confirm_delete">Yes, Delete</button>
            <button id="cancelDelete" class="btn btn-cancel" data-action="click->delete#close_modal">No</button>
        </div>
    </div>
</div>
