<body class="body-register">
<div class="reg-form-container">
   
  <%= form_with model: @register, local: true, class: "reg-form" do |form| %>
   <h1>Edit Users</h1>
  <!-- Row First Name and Last Name -->
  <div class="form-row">
    <div class="form-group">
      <%= form.label :first_name, 'First Name' %>
      <%= form.text_field :first_name, class: "form-control", id: "firstName" %>
      <!-- Message error first_name -->
        <% if @register.errors[:first_name].any? %>
       <div class="error-message">
        <%= @register.errors[:first_name].join(", ") %>
        </div>
       <% end %>
    </div>
    <div class="form-group">
      <%= form.label :last_name, 'Last Name' %>
      <%= form.text_field :last_name, class: "form-control", id: "lastName"%>
       <!-- Message error last_name -->
        <% if @register.errors[:last_name].any? %>
       <div class="error-message">
        <%= @register.errors[:last_name].join(", ") %>
        </div>
       <% end %>
    </div>
  </div>

  <!-- Row Birthday and Gender -->
  <div class="form-row">
    <div class="form-group">
      <%= form.label :birthday, 'Birthday' %>
      <%= form.date_field :birthday, class: "form-control", id: "birthday" %>
        <!-- Message error birthday -->
        <% if @register.errors[:birthday].any? %>
        <div class="error-message">
        <%= @register.errors[:birthday].join(", ") %>
        </div>
        <% end %>
    </div>
    <div class="form-group">
      <%= form.label :gender, 'Gender'%>
      <div class="radio-group">
        <%= form.radio_button :gender, "Male", id: "male" %>
        <%= form.label :gender_male, "Male",  class:"label-gender" ,for: "male" %>
        <%= form.radio_button :gender, "Female", id: "female" %>
        <%= form.label :gender_female, "Female", class:"label-gender" ,for: "female" %>
      </div>
      <!-- Message error gender -->
      <% if @register.errors[:gender].any? %>
      <div class="error-message">
      <%= @register.errors[:gender].join(", ") %>
      </div>
      <% end %>
    </div>
  </div>

  <!-- Row Email and Phone -->
  <div class="form-row">
    <div class="form-group">
      <%= form.label :email, 'Email' %>
      <%= form.email_field :email, class: "form-control", id: "email" %>
        <% if @register.errors[:email].any? %>
        <div class="error-message">
        <%= @register.errors[:email].join(", ") %>
        </div>
        <% end %>
    </div>
<div class="form-group">
  <%= form.label :phone, 'Phone Number' %>
  <%= form.telephone_field :phone, class: "form-control", id: "phone", data: { controller: "phone", phone_target: "input" } %>
  
  <% if @register.errors[:phone].any? %>
    <div class="error-message">
      <%= @register.errors[:phone].join(", ") %>
    </div>
  <% end %>
</div>

      </div>

  <!-- Row Subject -->
  <div class="form-group">
    <%= form.label :subject, 'Subject' %>
    <%= form.select :subject, options_for_select([["Math", "Math"], ["Science", "Science"],["Ruby", "Ruby"]]), prompt: "Choose option", class: "form-control", id: "subject" %>
      <% if @register.errors[:subject].any? %>
      <div class="error-message">
      <%= @register.errors[:subject].join(", ") %>
      </div>
      <% end %>
  </div>

  <!-- Submit Button -->
  <div class="form-group">
    <%= form.submit "Update", class: "btn-submit" %>
  </div>
   
</div>
<body>
<% end %>
